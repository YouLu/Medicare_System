<UserControl x:Class="MedicalSystem.Pf.UIControl.Form.GlobalMenuArea"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="43" Width="1024" Background="Transparent">

    <UserControl.Resources>



        <Style x:Key="myButton" TargetType="{x:Type Button}">

            <Setter Property="Background">

                <Setter.Value>

                    <SolidColorBrush Color="Black" />

                </Setter.Value>

            </Setter>

            <Style.Triggers>

                <Trigger Property="Button.IsMouseOver" Value="True">

                    <Setter Property="Background">

                        <Setter.Value>

                            <SolidColorBrush Color="SteelBlue"/>

                        </Setter.Value>

                    </Setter>

                </Trigger>

            </Style.Triggers>

        </Style>

    </UserControl.Resources>





    <Grid Width="1024" Background="Black" Height="40">
        <Grid Name="grid1" Background="Transparent"></Grid>
        <Button Margin="0,0,180,-107" FontSize="14" Name="button8" Click="button8_Click"   HorizontalAlignment="Right" Width="157" Height="27" VerticalAlignment="Bottom"  Foreground="White" Style="{StaticResource myButton}"/>
        <Button Margin="0,0,23,-107" FontSize="14" Name="button7" Click="button7_Click"  Height="27" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="157"  Foreground="White"  Style="{StaticResource myButton}"/>
        <Button HorizontalAlignment="Left" FontSize="14" Margin="38,9,0,4" Name="button1"   Click="button1_Click"  Width="158" IsEnabled="True"  Foreground="White" Style="{StaticResource myButton}"/>
        <Button Margin="196,9,0,4" FontSize="14" Name="button2" Click="button2_Click"  HorizontalAlignment="Left" Width="158" Foreground="White" Style="{StaticResource myButton}"/>
        <Button Margin="354,9,512,4" FontSize="14" Name="button3" Click="button3_Click"    Foreground="White" Style="{StaticResource myButton}" />
        <Button Margin="512,9,354,4" FontSize="14" Name="button4" Click="button4_Click"   Foreground="White" Style="{StaticResource myButton}"/>
        <Button Margin="0,9,196,4" FontSize="14" Name="button5" Click="button5_Click"  Foreground="White" HorizontalAlignment="Right" Width="158" Style="{StaticResource myButton}"/>
        <Button Margin="0,9,38,4" FontSize="14" Name="button6" Click="button6_Click"   Foreground="White" HorizontalAlignment="Right" Width="158" Style="{StaticResource myButton}"/>
    </Grid>
</UserControl>
